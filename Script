    <script>
        // Fungsi untuk berpindah tab
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                // Hapus kelas active dari semua tab
                document.querySelectorAll('.tab').forEach(t => {
                    t.classList.remove('active');
                });
                
                // Tambah kelas active ke tab yang diklik
                tab.classList.add('active');
                
                // Sembunyikan semua tab pane
                document.querySelectorAll('.tab-pane').forEach(pane => {
                    pane.classList.remove('active');
                });
                
                // Tampilkan tab pane yang sesuai
                const tabId = tab.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });
        
        // Fungsi toggle switch
        document.querySelectorAll('.toggle-switch').forEach(toggle => {
            toggle.addEventListener('click', function(e) {
                e.stopPropagation();
                this.classList.toggle('active');
                
                // Ambil nama fitur dari card parent
                const featureCard = this.closest('.feature-card');
                if (featureCard) {
                    const featureName = featureCard.getAttribute('data-feature') || 
                                       featureCard.querySelector('.feature-title').textContent;
                    const isActive = this.classList.contains('active');
                    console.log(`Fitur ${featureName} ${isActive ? 'diaktifkan' : 'dinonaktifkan'}`);
                }
            });
        });
        
        // Fungsi untuk slider
        const walkspeedSlider = document.getElementById('walkspeedSlider');
        const walkspeedValue = document.getElementById('walkspeedValue');
        
        walkspeedSlider.addEventListener('input', function() {
            walkspeedValue.textContent = this.value;
        });
        
        const jumpPowerSlider = document.getElementById('jumpPowerSlider');
        const jumpPowerValue = document.getElementById('jumpPowerValue');
        
        jumpPowerSlider.addEventListener('input', function() {
            jumpPowerValue.textContent = this.value;
        });
        
        const espRangeSlider = document.getElementById('espRangeSlider');
        const espRangeValue = document.getElementById('espRangeValue');
        
        espRangeSlider.addEventListener('input', function() {
            espRangeValue.textContent = this.value;
        });
        
        // Fungsi tombol close
        document.getElementById('closeBtn').addEventListener('click', function() {
            // Efek animasi sebelum menutup (dalam implementasi nyata, ini akan menutup window)
            this.style.transform = 'scale(0.8)';
            this.style.opacity = '0.7';
            
            setTimeout(() => {
                // Simulasi menutup aplikasi
                document.querySelector('.container').style.transform = 'scale(0.9)';
                document.querySelector('.container').style.opacity = '0';
                
                setTimeout(() => {
                    alert("GG MODS ditutup. Ini hanya demonstrasi UI.");
                    // Dalam implementasi nyata, ini akan menutup window
                    // window.close() atau sesuai d
